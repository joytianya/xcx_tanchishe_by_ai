.container {
  padding: 20rpx;
  min-height: 100vh;
  background: #f5f5f5;
}

.user-card {
  background: white;
  border-radius: 10rpx;
  padding: 40rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.phone-number {
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
}

.stats-box {
  background: white;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
  display: flex;
  justify-content: space-around;
}

.stats-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stats-value {
  font-size: 36rpx;
  color: #07c160;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.stats-label {
  font-size: 24rpx;
  color: #666;
}

.action-list {
  margin-top: 40rpx;
}

.action-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  margin-bottom: 20rpx;
}

.action-btn::after {
  border: none;
}

.avatar-wrapper {
  padding: 0;
  width: 128rpx !important;
  height: 128rpx;
  margin-bottom: 20rpx;
  border-radius: 50%;
  overflow: hidden;
}

.avatar-wrapper::after {
  border: none;
}

.avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
}

.nickname-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 10rpx;
}

.nickname {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 4rpx;
}

.edit-hint {
  font-size: 24rpx;
  color: #999;
}

.nickname-box {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 20rpx 0;
  padding: 10rpx;
}

.nickname {
  font-size: 32rpx;
  color: #333;
}

.edit-icon {
  font-size: 24rpx;
  color: #999;
  margin-left: 10rpx;
}

.edit-btn {
  font-size: 28rpx;
  color: #07c160;
  padding: 0 10rpx;
} 