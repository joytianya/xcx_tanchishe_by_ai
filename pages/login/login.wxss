page {
  background-color: #e6f3ff;
}

.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.login-box {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 60rpx;
  text-align: center;
}

.auth-tips {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 40rpx;
  text-align: center;
}

.login-btn {
  width: 80%;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #07c160;
  color: white;
  border-radius: 44rpx;
  font-size: 32rpx;
  margin-top: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(7,193,96,0.3);
}

.login-btn::after {
  border: none;
}

.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
}

.nickname {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.phone {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 40rpx;
}

.start-btn {
  width: 80%;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #07c160;
  color: white;
  border-radius: 44rpx;
  font-size: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(7,193,96,0.3);
}

.start-btn::after {
  border: none;
}