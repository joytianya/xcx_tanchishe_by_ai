.container {
  padding: 20rpx;
  min-height: 100vh;
  background: #f5f5f5;
}

.ranking-list {
  width: 100%;
  padding: 20rpx;
  margin-bottom: 120rpx;
}

.ranking-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  margin-bottom: 20rpx;
  background: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.my-rank {
  background: #e8f5e9;
}

.rank-number {
  width: 60rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.player-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.nickname {
  font-size: 28rpx;
  color: #333;
}

.score {
  font-size: 24rpx;
  color: #07c160;
  margin-top: 8rpx;
}

.date {
  font-size: 24rpx;
  color: #999;
}

.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 200rpx;
  color: #999;
  font-size: 28rpx;
}

.empty-icon {
  width: 128rpx;
  height: 128rpx;
  margin-bottom: 20rpx;
}

.clear-history-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  border-top: 1rpx solid #eee;
}

.clear-history {
  color: #ff4d4f;
  font-size: 28rpx;
  padding: 20rpx 40rpx;
} 