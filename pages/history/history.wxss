.container {
  padding: 20rpx;
  min-height: 100vh;
  background: #f5f5f5;
}

.history-list {
  width: 100%;
}

.history-item {
  background: white;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.score-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.score {
  font-size: 32rpx;
  color: #07c160;
  font-weight: bold;
}

.date {
  font-size: 24rpx;
  color: #999;
}

.detail-info {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #666;
}

.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 200rpx;
  color: #999;
  font-size: 28rpx;
}

.empty-icon {
  width: 128rpx;
  height: 128rpx;
  margin-bottom: 20rpx;
} 