.game-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 100vh;
  background: #f5f5f5;
  padding: 20rpx;
  box-sizing: border-box;
}

.game-canvas {
  width: 100%;
  height: 85vh;
  background: #ffffff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
  margin-bottom: 20rpx;
}

.score-panel {
  width: 100%;
  display: flex;
  justify-content: space-around;
  padding: 20rpx;
  background: #ffffff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.score-panel text {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.game-over {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: rgba(0,0,0,0.8);
  padding: 40rpx;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 100;
}

.game-over-text {
  color: #ffffff;
  font-size: 48rpx;
  margin-bottom: 20rpx;
}

.final-score {
  color: #ffffff;
  font-size: 36rpx;
  margin-bottom: 40rpx;
}

.restart-btn {
  background: #07c160;
  color: #ffffff;
  padding: 20rpx 60rpx;
  border-radius: 100rpx;
  font-size: 32rpx;
}

.control-panel {
  width: 100%;
  padding: 20rpx;
  display: flex;
  justify-content: center;
}

button {
  width: 200rpx;
}

.start-btn-container {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 100;
}

.start-btn {
  background: #07c160;
  color: #ffffff;
  font-size: 32rpx;
  padding: 20rpx 60rpx;
  border-radius: 100rpx;
  min-width: 300rpx;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(7, 193, 96, 0.4);
}

.start-btn:active {
  transform: scale(0.98);
}
