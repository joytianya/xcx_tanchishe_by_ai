.game-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 100vh;
  background: #f5f5f5;
  padding: 20rpx;
  box-sizing: border-box;
}

.game-canvas {
  width: 100%;
  height: 85vh;
  background: #ffffff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
  margin-bottom: 20rpx;
}

.score-panel {
  width: 100%;
  display: flex;
  justify-content: space-around;
  padding: 20rpx;
  background: #ffffff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.score-panel text {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.game-over {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 200;
}

.game-over-content {
  background: #ffffff;
  padding: 40rpx;
  border-radius: 20rpx;
  width: 80%;
  max-width: 600rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.game-over-text {
  font-size: 48rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.final-score {
  font-size: 36rpx;
  color: #07c160;
  margin-bottom: 20rpx;
}

.rank-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 40rpx;
}

.button-group {
  display: flex;
  justify-content: space-between;
  width: 100%;
  padding: 0 20rpx;
}

.action-btn {
  flex: 1;
  margin: 0 20rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  border-radius: 40rpx;
}

.restart-btn {
  background: #07c160;
  color: #ffffff;
}

.ranking-btn {
  background: #ffffff;
  color: #07c160;
  border: 2rpx solid #07c160;
}

.control-panel {
  width: 100%;
  padding: 20rpx;
  display: flex;
  justify-content: center;
}

button {
  width: 200rpx;
}

.start-btn-container {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 100;
}

.start-btn {
  background: #07c160;
  color: #ffffff;
  font-size: 32rpx;
  padding: 20rpx 60rpx;
  border-radius: 100rpx;
  min-width: 300rpx;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(7, 193, 96, 0.4);
}

.start-btn:active {
  transform: scale(0.98);
}

.joystick-container {
  position: fixed;
  left: 100rpx;
  bottom: 150rpx;
  z-index: 100;
  touch-action: none;
}

.joystick-base {
  width: 200rpx;
  height: 200rpx;
  background: rgba(255, 255, 255, 0.3);
  border: 4rpx solid rgba(255, 255, 255, 0.5);
  border-radius: 50%;
  position: relative;
}

.joystick-stick {
  width: 80rpx;
  height: 80rpx;
  background: #07c160;
  border-radius: 50%;
  position: absolute;
  left: 60rpx;
  top: 60rpx;
  transform: translate(-50%, -50%);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.control-area {
  position: fixed;
  left: 80rpx;
  bottom: 80rpx;
  z-index: 100;
}

.control-circle {
  width: 240rpx;
  height: 240rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  border: 4rpx solid rgba(255, 255, 255, 0.5);
  position: relative;
}

.direction-arrow {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  border-left: 20rpx solid transparent;
  border-right: 20rpx solid transparent;
  border-bottom: 40rpx solid #07c160;
  transform-origin: center 75%;
  opacity: 0.8;
  margin-left: -20rpx;
  margin-top: -40rpx;
}
