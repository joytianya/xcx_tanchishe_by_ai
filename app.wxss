/**app.wxss**/
page {
  height: 100%;
  width: 100%;
  background: #f5f5f5;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

/* 通用文本样式 */
text {
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica,
    Segoe UI, Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei',
    sans-serif;
}

/* 通用按钮样式 */
button {
  background: #07c160;
  color: #ffffff;
  border-radius: 8rpx;
  font-size: 32rpx;
  line-height: 2.4;
  margin: 20rpx 0;
}

button::after {
  border: none;
}

button[disabled] {
  background: #ccc !important;
  color: #fff !important;
}

/* 摇杆圈样式 */
.joystick {
  background: rgba(0, 0, 0, 0.7); /* 深色背景 */
  border-radius: 50%;
  width: 100rpx; /* 根据需要调整大小 */
  height: 100rpx; /* 根据需要调整大小 */
  position: absolute; /* 根据需要调整位置 */
  /* 其他样式 */
}

/* 确定方向圆圈样式 */
.direction-circle {
  background: rgba(0, 0, 0, 0.7) !important; /* 深色背景 */
  border-radius: 50%;
  width: 80rpx; /* 根据需要调整大小 */
  height: 80rpx; /* 根据需要调整大小 */
  position: absolute; /* 根据需要调整位置 */
  bottom: 20rpx; /* 根据需要调整位置 */
  right: 20rpx; /* 根据需要调整位置 */
  z-index: 10; /* 确保在其他元素之上 */
}
